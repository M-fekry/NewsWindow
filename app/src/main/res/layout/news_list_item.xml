<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:id="@+id/cardView">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:id="@+id/iv_news_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_news_image"
                android:padding="8dp"
                android:text="assssssdasdgagdjhadjhasgdjhsagdhasgdhagshdjas"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="8.5pt"
                android:id="@+id/tv_news_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_news_title"
                android:maxLines="3"
                android:padding="8dp"
                android:text="assahsjkahskjhajshakjshkajhsnxbcnmbjkafncbvbjkvbkjdfkhkjddfh"
                android:textColor="#666"
                android:textSize="7pt"
                android:id="@+id/tv_news_description"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/tv_news_description"
                android:background="#c0c0c0"
                android:layout_marginTop="6dp"/>

        </RelativeLayout>

        
    </android.support.v7.widget.CardView>

</LinearLayout>